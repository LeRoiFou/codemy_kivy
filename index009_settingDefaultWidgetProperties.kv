<Button>
# Configuration de tous les boutons de la fenêtre

	font_size: 32

	background_normal: ''

	background_color: (0, 0, 1, 1)


<TextInput>
# Configuration de tous les champs de saisie

	background_color: (150/255, 150/255, 150/255, 1)


<Label>
# Configuration de toutes les étiquettes

	font_size: 32


<MyLayout>
# Configuration de la fenêtre
	
	BoxLayout:

		orientation: 'vertical'

		size: root.width, root.height

		padding: 10

		spacing: 10

		Label:

			text: 'Nom'

		TextInput:

			multiline: False

		Label:

			text: 'Pizza favorite'

		TextInput:

			multiline: False

		Button:

			text: 'Soumettre'

		Button:

			text: 'Effacer'

			background_color: (1,0,0,1)  # personnalisation de la couleur pour ce bouton qui est différente des autres boutons
