Screen:

	MDCard:
		# affichage d'un cadre
		# https://kivymd.readthedocs.io/en/latest/components/card/#mdcard

		# le cadre n'est pas automotiquement élargi par rapport à la fenêtre principale
		# size_hint: None, None

		# orientation des widgets intérieurs
		orientation: 'vertical'
		
		# largeur, hauteur
		# size: "600dp", "480dp"

		# espacement entre le bord de l'écran principal et les widgets
		padding: 25

		# espacement entre les widgets
		spacing: 25
		
		# position x, y du cadre par rapport à la fenêtre principale
		pos_hint: {"center_x": .5, "center_y": .5}

		MDToolbar:
			# barre d'outils
			# https://kivymd.readthedocs.io/en/latest/components/toolbar/

			# titre de la barre d'outils
			title: "Barre d'outils en haut de la fenêtre principale"

			# icône du menu affiché à gauche
			left_action_items: [["menu"]]

			# autre icône du menu affiché à droite
			right_action_items: [["dots-vertical"]]

			# couleur de fond de la barre d'outils
			md_bg_color: .2, .2, .2, 1

			# couleur du texteS
        	specific_text_color: 0.12, 0.45, 0.65, 1
		
		MDLabel:
			# affichage d'un texte
			# https://kivymd.readthedocs.io/en/latest/components/label/

			# texte à afficher
            text: "Texte"
           
            # alignement du texte : left / right / center
            halign: "center"
            
            # couleur du texte : 16 couleurs / RGB / hexadecimal
            # color:	"#056293"

            # couleurs automatiques avec theme_text_color :
            # Primary -> blanc clair
            # Secondary -> blanc foncé
            # Error -> rouge
            # ContrastParentBackground -> couleur de fond inversé de la fenêtre principale
            theme_text_color: "ContrastParentBackground"

            # taille du texte
            font_size: 40

            # espacement du widget par rapport aux autres widgets
            padding_y: 15

        MDSeparator:
        	# ligne de séparation entre widgets
            
            # épaisseur de la ligne de séparation
            height: "10dp"

        MDTextFieldRound:
        	# champs de saisies avec des icônes
        	# https://kivymd.readthedocs.io/en/latest/components/text-field/

        	# texte affiché automatiquement
			hint_text: "Vous pouvez saisir ici"

			# icône rattaché au champ de saisie
			icon_right: "comment"

			# la largeur du widget n'est pas à la largeur de la fenêtre principale
			size_hint_x: None

			# largeur du widget
			width: 300

			# taille de la police d'écriture
			font_size: 18

			# positionnement du widget par rapport à la fenêtre principale
			pos_hint: {"center_x": 0.5}

			# les caractères saisies sont remplacées par le '*'
			password: True

		MDSlider:
			# barre de défilement
			# https://kivymd.readthedocs.io/en/latest/components/slider/

			# valeur minimum
			min: 0

			# valeur maximum
		    max: 100

		    # valeur par défaut
		    value: 10

		    # couleur de la barre de défilement
		    # theme_cls.primary_light : couleur par défaut en version claire
		    # theme_cls.primary : couleur par défaut
		    # theme_cls.primary_dark : couleur par défaut en version foncée
		    color: app.theme_cls.primary_color

		MDRectangleFlatButton:
			# bouton rectangulaire
			# https://kivymd.readthedocs.io/en/latest/components/button/#mdrectangleflatbutton

			# texte à afficher
			text: 'Bouton rectangulaire classique'

			# taille du texte
			font_size: 16

			# position du bouton par rapport à la fenêtre principale
			pos_hint: {'center_x': 0.5}
			
		MDRaisedButton:
			# bouton rectangulaire avec couleur de fond
			# https://kivymd.readthedocs.io/en/latest/components/button/#mdraisedbutton
			
			# texte à afficher
			text: 'Bouton rectangulaire avec couleur de fond'

			# taille du texte
			font_size: 14

			# couleur de fond du bouton
			md_bg_color: 0, 0.25, 0.9, 1

			# position du bouton par rapport à la fenêtre principale
			pos_hint: {'center_x': 0.5}

		MDRoundFlatButton:
			# bouton arrondi
			# https://kivymd.readthedocs.io/en/latest/components/button/#mdroundflatbutton
			
			# texte à afficher
			text: "Bouton arrondi"

			# taille du texte
			font_size: 12

			# position du bouton par rapport à la fenêtre principale
			pos_hint: {"center_x": 0.5}

		MDFloatingActionButtonSpeedDial:
			# bouton menu déroulant des icônes
			# https://kivymd.readthedocs.io/en/latest/components/button/#mdfloatingactionbuttonspeeddial

			# icônes à afficher dont la liste est dans le fichier .py
			data: app.data 

			# une croix s'affiche lorsqu'on ferme l'affichage des icônes
			root_button_anim: True 

			# couleur du texte
			label_text_color: 0, 1, 0, 1 

			# couleur de fond des icônes
			bg_color_stack_button: 1, 0, 0, 0.1 

			# couleur du texte des icônes
			color_icon_stack_button : 0, 0, 1, 1 

			# couleur de fond du bouton d'action
			bg_color_root_button : 0, 0, 1, 0.5 

			# couleur du texte du bouton d'action
			color_icon_root_button : 1, 0, 0, 1 

			# couleur de lancement des icônes
			bg_hint_color: 1, 0, 0, 1 

