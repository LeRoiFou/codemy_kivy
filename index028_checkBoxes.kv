<MyLayout>

	BoxLayout:
		
		orientation: 'vertical'  # orientation des widgets
		size: root.width, root.height  # étalement des widgets sur toute la fenêtre principale
		
		Label:

			text: 'Sélectionner votre pizza'
			font_size: 32

		GridLayout:

			cols: 2

			Label:

				text: '4 Fromages'
				font_size: 20

			CheckBox:

				on_active: root.checkbox_click(self, self.active, '4 Fromages')

			Label:

				text: 'Champignons'
				font_size: 20

			CheckBox:

				on_active: root.checkbox_click(self, self.active, 'Champignons')

			Label:

				text: 'Poivrons'
				font_size: 20

			CheckBox:

				on_active: root.checkbox_click(self, self.active, 'Poivrons')

		Label:

			id:	output_label
			text: ""
			font_size: 20