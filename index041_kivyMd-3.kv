<MyLayout>

	BoxLayout:
		size:root.width, root.height
		orientation: 'vertical'
		padding: 10  # espacement entre la fenÃªtre principale et les widgets
		spacing: 5  # espacement entre widgets

	
		Screen

			MDCard:
		        orientation: "vertical"
		        padding: "8dp"
		        size_hint: None, None
		        size: "280dp", "180dp"
		        pos_hint: {"center_x": .5, "center_y": .5}

		        MDLabel:
		            text: "C'est mon titre"
		            theme_text_color: "Secondary"
		            size_hint_y: None
		            height: self.texture_size[1]

		        MDSeparator:
		            height: "1dp"

		        MDLabel:
		            text: "Blablablablabla !"

		Screen
		
		    MDSlider:
				min: 0
			    max: 100
			    value: 40
			    color: app.theme_cls.accent_color